<div class="col s12">
    <h1>EAT DA BURGER</h1>
</div>

 <div class="col s6">
      <div class="">
        <h2>Ordered Burgers</h2>
        <ul>
          {{#each burger}}
          {{#unless devoured}}
          {{>burgers/burgers  devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
</div>

 <div class="col s6">
      <div class="">
        <h2>Want to order again?</h2>
        <ul>
          {{#each burger}}
          {{#unless devoured}}
          {{> burgers/burgers  devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
</div>


<!-- Add a new burger -->
<form class="create-form">
      <h3><i class="far fa-clipboard fa-2x">Order a new Burger</i></h3>
      <div class="form-group">
        <input type="text" id="" name="name" placeholder="What burger would you like?">
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Submit<i class="material-icons right">send</i></button>
</form>